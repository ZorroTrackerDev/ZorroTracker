    "version": "0.2.0",
    "configurations": [
		{
		"command": "npm start",
		"name": "Build & Run",
		"request": "launch",
		"type": "node-terminal"
		},
		{
		"command": "npm run electron",
		"name": "Run",
		"request": "launch",
		"type": "node-terminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"windows": {
			  "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
			},
			"args" : ["./build/main.js"],
			"outputCapture": "std"
		}
    ]
}